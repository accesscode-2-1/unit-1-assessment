<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.TileActivity"
    android:id="@+id/activity_tile"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/leftSide">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/redView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:baselineAligned="true"
            android:background="@android:color/holo_red_dark"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="60"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@android:color/holo_green_light"
            android:baselineAligned="false"
            android:id="@+id/greenView"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/rightSide">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:id="@+id/yellowView"
            android:layout_weight='33'
            android:background="#fffffd23"
            android:layout_height="0dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/whiteView"
            android:layout_weight="44"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#ff0708ff"
            android:layout_weight="22"
            android:id="@+id/blueView"></LinearLayout>
    </LinearLayout>


</LinearLayout>
